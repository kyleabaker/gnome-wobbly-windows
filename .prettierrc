{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "tabWidth": 2,
  "bracketSpacing": true,
  "plugins": ["@prettier/plugin-xml"],
  "overrides": [
    {
      "files": "*.xml",
      "options": {
        "xmlWhitespaceSensitivity": "ignore",
        "singleAttributePerLine": false,
        "xmlSortAttributesByKey": false,
        "xmlQuoteAttributes": "double"
      }
    }
  ]
}